<!DOCTYPE html>
<html class="loading dark-layout" lang="en" data-layout="dark-layout" data-textdirection="ltr">
    
 <!-- BEGIN: Header-->
 <%-include("./partials/header") %>
 <!-- END: Header-->
 <%-include("./partials/alert") %>

 <!-- BEGIN: Main Menu-->
 <%-include("./partials/sidebar") %>
 <!-- END: Main Menu-->

<!-- BEGIN: Body-->
<div class="alert alert-info"><%= message.success %></div>

<body class="vertical-layout vertical-menu-modern  navbar-floating footer-static  " data-open="click"
    data-menu="vertical-menu-modern" data-col="">

        <!-- BEGIN: Content-->
        <div class="app-content content kanban-application">
            <div class="content-overlay"></div>
            <div class="header-navbar-shadow"></div>
            <div class="content-wrapper container-xxl p-0">
                <div class="content-header row">
                </div>
                <div class="content-body">
                    <div class="row" id="basic-table">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header border-bottom p-1">
                                    <div class="head-label">
                                        <h6 class="mb-0">Notice Board</h6>
                                    </div>
                                    <div class="dt-action-buttons text-end">
                                        <div class="dt-buttons d-inline-flex">
                                            <button class="dt-button create-new btn btn-primary" tabindex="0"
                                                aria-controls="DataTables_Table_0" type="button"
                                                data-bs-toggle="modal" data-bs-target="#modals-slide-in"><span><svg
                                                        xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                        viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                        stroke-width="2" stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        class="feather feather-plus me-50 font-small-4">
                                                        <line x1="12" y1="5" x2="12" y2="19"></line>
                                                        <line x1="5" y1="12" x2="19" y2="12"></line>
                                                    </svg>Add Notice</span></button>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>S.No</th>
                                                <th>Title</th>
                                                <th>Description</th>
                                                <th>Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let i=0; i< data.length; i++){%>
                                            <tr>
                                                <td><%=i+1%></td>
                                                <td><%=data[i].title%></td>
                                                <td><%=data[i].notice%></td>
                                                <td><%=moment(data[i].createdAt).format('Do MMMM, YYYY')%></td>
                                                <td>
                                                    <button type="button" href="#"
                                                            class="btn bg-light-success dropdown-toggle hide-arrow py-0 waves-effect waves-float waves-light border-0">
                                                            <i class="fa fa-pencil"></i>
                                                    </button>   
                                                    <a type="button" href="/noticeDelete/<%=data[i]._id%>"
                                                        class="btn bg-light-danger dropdown-toggle hide-arrow py-0 waves-effect waves-float waves-light border-0">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <%}%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- END: Content-->

        <!-- Modal to add new record -->
        <div class="modal modal-slide-in fade" id="modals-slide-in" style="display: none;" aria-hidden="true">
        <div class="modal-dialog sidebar-sm">
            <form class="add-new-record modal-content p-0 needs-validation" action="/noticeCreate" method="post" novalidate>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">Ã—</button>
                <div class="modal-header mb-1">
                    <h5 class="modal-title" id="exampleModalLabel">New Notice</h5>
                </div>
                <div class="modal-body flex-grow-1">
                    <div class="mb-1 has-validation">
                        <label class="form-label" for="forTitle">Title</label>
                        <input type="text" name="title" class="form-control dt-full-text"
                            id="forTitle" placeholder="Please Enter Title"
                            aria-label="Module Name" required>
                        <div class="invalid-feedback">
                            Please enter a title.
                        </div>
                    </div>
                    <div class="mb-1 has-validation">
                        <label class="form-label" for="forNotice">Description</label>
                        <input type="text" name="notice" class="form-control dt-full-text"
                            id="forNotice" placeholder="Please Enter Description"
                            aria-label="Module Name" required>
                        <div class="invalid-feedback">
                            Please enter a notice.
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="submit" class="btn btn-primary data-submit me-1 waves-effect waves-float waves-light">Submit</button>
                    <button type="reset" class="btn btn-outline-secondary waves-effect"
                        data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
        </div>
        <div class="sidenav-overlay"></div>
        <div class="drag-target"></div>

        <!-- BEGIN: Footer-->
        <%-include("./partials/footer") %>
        <!-- END: Footer-->


        <!-- BEGIN: Vendor JS-->
        <%-include("./partials/scripts") %>

</body>
<!-- END: Body-->

</html>