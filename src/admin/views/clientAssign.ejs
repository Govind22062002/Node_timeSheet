                <div class="content-wrapper container-xxl p-0">
                    <div class="content-header row">
                    </div>
                    <div class="content-body">
                        <div class="row" id="basic-table">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header border-bottom p-1">
                                        <div class="head-label">
                                            <h6 class="mb-0">Client Assign</h6>
                                        </div>
                                        <div class="dt-action-buttons text-end">
                                            <div class="dt-buttons d-inline-flex"> <button
                                                    class="dt-button create-new btn btn-primary" tabindex="0"
                                                    aria-controls="DataTables_Table_0" type="button"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#modals-slide-in"><span><svg
                                                            xmlns="http://www.w3.org/2000/svg" width="24"
                                                            height="24" viewBox="0 0 24 24" fill="none"
                                                            stroke="currentColor" stroke-width="2"
                                                            stroke-linecap="round" stroke-linejoin="round"
                                                            class="feather feather-plus me-50 font-small-4">
                                                            <line x1="12" y1="5" x2="12" y2="19"></line>
                                                            <line x1="5" y1="12" x2="19" y2="12"></line>
                                                        </svg>Add project</span></button> </div>
                                        </div>
                                    </div>
                                    <div class="table-responsive">
                                        <table id="clientDatable" class="table">
                                            <thead>
                                                <tr>
                                                    <th>Project</th>
                                                    <th>Client</th>
                                                    <th>Status</th>
                                                    <th>Discription</th>
                                                    <th>Start Date</th>
                                                    <th>End Date</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                               <%if(data){ %>
                                                <% data.forEach(client => { %>
                                                    <tr>
                                                        <td><%=client.clientName%></td>
                                                        <td><%=client.projectName%></td>
                                                        <td><%=client.status%></td>
                                                        <td><%=client.discription%></td>
                                                        <td><%=client.start_Date ? client.start_Date.toLocaleDateString() : client.start_Date %></td>
                                                        <td><%=client.end_Date ? client.end_Date.toLocaleDateString() : client.end_Date %></td>
                                                        <td>
                                                            <a type="button"  href="#"
                                                                class="btn btn-sm dropdown-toggle hide-arrow py-0 waves-effect waves-float waves-light border-0">
                                                                <i class="fa fa-pencil"></i>
                                                    </a>   
                                                        <a type="button" href="/clientDelete/<%=client._id%>"
                                                            class="btn btn-sm dropdown-toggle hide-arrow py-0 waves-effect waves-float waves-light border-0">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                        </td>
                                                    </tr>
                                                    <% })}%>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
